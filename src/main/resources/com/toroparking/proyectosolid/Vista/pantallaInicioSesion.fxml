               <image>
                  <Image url="@../logoJaveriana.png" />
               </image>
            </ImageView>
            <ImageView fx:id="imgLogoToro" fitHeight="168.0" fitWidth="141.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
